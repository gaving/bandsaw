<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
    id="net.brokentrain.bandsaw"
    name="Bandsaw"
    version="0.1"
    provider-name="brokentrain.net"
    class="net.brokentrain.bandsaw.Bandsaw">
    <runtime>
        <library name="bandsaw.jar" />
    </runtime>
    <requires>
        <import plugin="org.eclipse.core.resources"/>
        <import plugin="org.eclipse.ui.views"/>
        <import plugin="org.eclipse.ui"/>
    </requires>
    <extension
        id="Bandsaw.views"
        name="org.eclipse.ui.views"
        point="org.eclipse.ui.views">
        <category
            name="Bandsaw"
            id="BandsawEclipseProject.Bandsaw"/>
        <view
            name="Log"
            icon="icons/bandsaw.gif"
            category="BandsawEclipseProject.Bandsaw"
            class="net.brokentrain.bandsaw.views.BandsawView"
            id="net.brokentrain.bandsaw.views.BandsawView">
        </view>
    </extension>
    <extension
        point="org.eclipse.ui.perspectiveExtensions">
        <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
            <view
                ratio="0.5"
                relative="org.eclipse.ui.views.TaskList"
                visible="true"
                relationship="right"
                id="net.brokentrain.bandsaw.views.BandsawView">
            </view>
        </perspectiveExtension>
    </extension>
    <extension
        point="org.eclipse.ui.preferencePages">
        <page
            name="Bandsaw"
            class="net.brokentrain.bandsaw.preferences.Log4jPreferencePage"
            id="net.brokentrain.bandsaw.preferences.Log4jPreferencePage">
        </page>
        <page
            name="Filters"
            category="net.brokentrain.bandsaw.preferences.Log4jPreferencePage"
            class="net.brokentrain.bandsaw.preferences.Log4jFilterPreferencePage"
            id="net.brokentrain.bandsaw.preferences.Log4jFilterPreferencePage">
        </page>
        <page
            name="Columns"
            category="net.brokentrain.bandsaw.preferences.Log4jPreferencePage"
            class="net.brokentrain.bandsaw.preferences.Log4jColumnsPreferencePage"
            id="net.brokentrain.bandsaw.preferences.Log4jColumnsPreferencePage">
        </page>
        <page
            name="Color"
            category="net.brokentrain.bandsaw.preferences.Log4jPreferencePage"
            class="net.brokentrain.bandsaw.preferences.ColorPreferencePage"
            id="net.brokentrain.bandsaw.preferences.ColorPreferencePage">
        </page>
    </extension>
    <extension
        id="net.brokentrain.bandsaw.viewactions"
        point="org.eclipse.ui.viewActions">
        <viewContribution
            targetID="net.brokentrain.bandsaw.views.BandsawView"
            id="Bandsaw.ViewContribution">
            <action
                label="&amp;Quick Filter"
                icon="icons/filter.gif"
                tooltip="Add a &amp;Quick filter"
                class="net.brokentrain.bandsaw.actions.QuickFilterAction"
                menubarPath="Bandsaw.FilterMenu/Bandsaw.FilterGroup1"
                toolbarPath="Group3"
                enablesFor="*"
                id="Bandsaw.QuickFilterAction">
            </action>
            <action
                style="toggle"
                id="Bandsaw.PauseAction"
                toolbarPath="Group1"
                class="net.brokentrain.bandsaw.actions.PauseAction"
                enablesFor="*"
                icon="icons/pause.gif"
                label="Pause Display"
                menubarPath="Bandsaw.DisplayMenu/Bandsaw.DisplayGroup1"
                tooltip="&amp;Pause">
            </action>
            <action
                style="push"
                id="Bandsaw.ClearAction"
                toolbarPath="Group1"
                class="net.brokentrain.bandsaw.actions.ClearAction"
                enablesFor="*"
                icon="icons/clear.gif"
                label="&amp;Clear Display"
                menubarPath="Bandsaw.DisplayMenu/Bandsaw.DisplayGroup1"
                tooltip="&amp;Clear">
            </action>
            <action
                style="push"
                id="Bandsaw.StopAction"
                toolbarPath="Group2"
                class="net.brokentrain.bandsaw.actions.StopAction"
                enablesFor="*"
                icon="icons/stop.gif"
                label="S&amp;top Log4j Server"
                menubarPath="Bandsaw.Log4jServerMenu/Bandsaw.Log4jServerGroup1"
                tooltip="S&amp;top  Log4j Server">
            </action>
            <action
                style="push"
                id="Bandsaw.StartAction"
                toolbarPath="Group2"
                class="net.brokentrain.bandsaw.actions.StartAction"
                enablesFor="*"
                icon="icons/start.gif"
                label="&amp;Start Log4j Server"
                menubarPath="Bandsaw.Log4jServerMenu/Bandsaw.Log4jServerGroup1"
                tooltip="&amp;Start Log4j Server">
            </action>
            <menu
                label="Log4j Server"
                path="additions"
                id="Bandsaw.Log4jServerMenu">
                <separator
                    name="Bandsaw.Log4jServerGroup1">
                </separator>
            </menu>
            <menu
                label="Display"
                path="additions"
                id="Bandsaw.DisplayMenu">
                <separator
                    name="Bandsaw.DisplayGroup1">
                </separator>
            </menu>
            <menu
                label="Filter"
                path="additions"
                id="Bandsaw.FilterMenu">
                <separator
                    name="Bandsaw.FilterGroup1">
                </separator>
            </menu>
        </viewContribution>
    </extension>
</plugin>
